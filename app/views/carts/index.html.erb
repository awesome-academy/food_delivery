           <% if current_user.carts.any? %>
            <button id="update-cart", class="btn btn-success"><%= t("views.carts.index.pay") %></button>
           <% else %>
           <% end %>
        <% else %>
           <a href="#loginModal" data-toggle="modal" id="login-button" class="btn btn-success"><%= t("views.carts.index.pay") %></a>
        <% end %>
  </div>
</div>
