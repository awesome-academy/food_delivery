<h1></h1>
<div class="row">
  <div class="col-sm-6" style="backgound: #123">
    <ul>
      <%= render @carts %>
    </ul>
  </div>
  <div class="col-sm-1">

  </div>
  <div class="col-sm-3">
    <hr>
    <h3><%= t "views.carts.index.info" %></h3>
    <hr>
    <h3><%= t "views.carts.index.total"  %> :  </h3>
    <h3 id="total"></h3>
