<%= form_for :session, url: login_path, class: "login-inside" do |f| %>
  <%= f.text_field :username, placeholder: t("views.sessions.new.username"), class: "form-control"  %><br>
  <%= f.password_field :password, placeholder: t("views.sessions.new.password"), class: "form-control" %>
  <div class="modal-inline">
    <%= f.label :remember_me, class: "checkbox inline" do %>
    <%= f.check_box :remember_me %>
    <span><%=t "views.sessions.new.remember" %></span>
    <% end %>&emsp;&emsp;
    <%= link_to t("views.sessions.new.forgot"), new_password_reset_path %>
  </div>
  <br>
  <br>
  <%= f.submit t("views.layouts.login"), class: "btn btn-success" %>
<% end %>
