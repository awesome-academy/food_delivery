<li class="coment-food">
  <div id="comment-food">
    <div>
      <img src ="<%= comment.user.avatar_url%>" height="20" width="20">&nbsp;<%= link_to comment.user.name, comment.user %>
    </div>
    <hr>
    <div id="comment-content">
      <%= comment.content %>
    </div>
    <div class="row">
      <div class="column">
      <% comment.pictures.each do |pic| %>
          <img src=<%=pic.image %>  width="130em" height="120em">
      <% end %>
      </div>
    </div>
  </div>
</li>
