<% @orders.each do |order| %>
  <hr>
  <div class="thumb-layout">
    <div class="row" style="display:flex; flex-wrap:wrap;">
      <% order.order_details.each do |order_detail| %>
        <div class="col-md-2 col-sm-4">
          <div class="thumbnail">
            <%= link_to order_detail.food do %>
              <%= image_tag order_detail.food.img_url, alt: order_detail.food.name %>
            <% end %>
            <div class="caption">
              <h4><%= link_to order_detail.food.name, order_detail.food, class: "text-center" %></h4>
              <div class="row">
                <div class="col-md-12"><span><%= t("views.static_pages.home.show_orders.quantity") + " #{order_detail.quantity}" %></span></div>
                <div class="col-md-12">
                  <span><%= t("views.orders.created_at") + " #{order_detail.created_at.strftime(t("date_format"))}" %></span>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% end %>