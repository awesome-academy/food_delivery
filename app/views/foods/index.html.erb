<div class="container">
  <div class="text-center"><%= t "views.layouts.header.all"%></div>
  <div class="all-foods">
    <div class="thumb-layout">
      <div class="row" style="display:flex; flex-wrap:wrap;">
        <% @foods.each do |food| %>
          <div class="col-md-2 col-sm-4">
            <div class="thumbnail">
              <%= link_to food do %>
                <%= image_tag food.img_url, alt: food.name %>
              <% end %>
              <div class="caption">
                <h4><%= link_to food.name, food, class: "text-center" %></h4>
                <div class="row cart">
                  <div class="col-md-8"><span><%= t("views.static_pages.home.slider.price") + ": $#{food.price}" %></span></div>
                  <div class="col-md-4">
                    <button value="<%= food.id %>" class="show-add" data-toggle="modal" data-target="#addFood"><i class="fa fa-cart-plus fa-2x" aria-hidden="true"></i></button>
                  </div>
                </div>
                <br>
                <span><%= link_to food.user.name, food.user %></span>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

